@model List<CategoryDto>
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yonetimi /</span> Kategoriler</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card p-4">
            <div class="table-responsive text-nowrap ">

                <a asp-action="Add" asp-controller="Category" asp-area="Admin" class="btn btn-success mb-3">Ekle <i class="bx bx-plus"> </i> </a>
                <table class="table table-border" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Isim</th>
                            <th>Olusturulma Tarihi</th>
                            <th>Olusturan</th>
                            <th>Durum</th>
                            <th>Islemler</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var category in Model)
                        {
                            <tr name="@category.Id">
                                <td>@category.Name</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.CreatedBy</td>
                                <td>@(category.IsDeleted ? "Aktif Degil" : "Aktif")</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@category.Id">
                                        <i class="bx bxs-edit"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id">
                                        <i class="bx bx-minus-circle"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Project</th>
                            <th>Client</th>
                            <th>Users</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <!--/ Basic Bootstrap Table -->


    </div>
    <!-- / Content -->
    <!-- Footer -->
    <!-- / Footer -->

    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->
@section Scripts {
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}